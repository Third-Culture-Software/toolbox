#!/usr/bin/env bash

set -o pipefail
IFS=$'\n\t'

DIST=$(uname)
ARTIFACT_CLI_VERSION="v0.2.8"

case $DIST in
  Darwin)
    INSTALL_PATH='/usr/local/bin'
    ;;
  Linux)
    [[ -f /usr/bin/sudo ]] && sudo rm -f /etc/apt/sources.list.d/python_2.7-source.list
    INSTALL_PATH='/usr/bin'
   ;;
  *)
    echo "Unsupported distro $DIST"
    exit 1
  ;;
esac

cat << EOF >> ~/.ssh/config
Host github.com bitbucket.org
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
EOF

install_cmd() {
  local cmd=$@
  if [ `whoami` == 'root' ]; then
    `$@`
  else
    `sudo $@`
  fi
}

install_cmd ln -sf ~/.toolbox/retry $INSTALL_PATH/retry
install_cmd chmod +x $INSTALL_PATH/retry
if [[ $? -eq 0 ]];then 
  echo "retry installed"
  echo "toolbox_install_error_retry 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_retry 1" >> /tmp/toolbox_metrics
fi

install_cmd ln -sf ~/.toolbox/ssh-session-cli $INSTALL_PATH/semaphore
install_cmd chmod +x $INSTALL_PATH/semaphore
if [[ $? -eq 0 ]];then 
  echo "ssh-session-cli installed"
  echo "toolbox_install_error_ssh-session-cli 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_ssh-session-cli 1" >> /tmp/toolbox_metrics
fi



install_cmd ln -sf ~/.toolbox/cache $INSTALL_PATH/cache
install_cmd chmod +x $INSTALL_PATH/cache
if [[ $? -eq 0 ]];then 
  echo "cache installed"
  echo "toolbox_install_error_cache 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_cache 1" >> /tmp/toolbox_metrics
fi


install_cmd ln -sf ~/.toolbox/sem-service $INSTALL_PATH/sem-service
install_cmd chmod +x $INSTALL_PATH/sem-service
if [[ $? -eq 0 ]];then 
  echo "sem-service installed"
  echo "toolbox_install_error_sem-service 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_sem-service 1" >> /tmp/toolbox_metrics
fi


install_cmd ln -sf ~/.toolbox/sem-dockerize $INSTALL_PATH/sem-dockerize
install_cmd chmod +x $INSTALL_PATH/sem-dockerize
if [[ $? -eq 0 ]];then 
  echo "sem-dockerize installed"
  echo "toolbox_install_erro_sem-dockerize 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_sem-dockerize 1" >> /tmp/toolbox_metrics
fi


install_cmd ln -sf ~/.toolbox/sem-service-check-params $INSTALL_PATH/sem-service-check-params
install_cmd chmod +x $INSTALL_PATH/sem-service-check-params
if [[ $? -eq 0 ]];then 
  echo "sem-service-check-params installed"
  echo "toolbox_install_error_sem-service-check-params 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_sem-service-check-params 1" >> /tmp/toolbox_metrics
fi


# Install Artifact Cli
install_cmd curl -s -L --retry 5 -o artifact.tar.gz https://github.com/semaphoreci/artifact/releases/download/${ARTIFACT_CLI_VERSION}/artifact_${DIST}_x86_64.tar.gz
install_cmd tar xzf artifact.tar.gz
install_cmd mv artifact $INSTALL_PATH/artifact
install_cmd chmod +x $INSTALL_PATH/artifact
install_cmd rm -f artifact.tar.gz LICENSE README.md
if [[ $? -eq 0 ]];then 
  echo "artifacts installed"
  echo "toolbox_install_error_artifacts 0" >> /tmp/toolbox_metrics
else
  echo "toolbox_install_error_artifacts 1" >> /tmp/toolbox_metrics
fi



